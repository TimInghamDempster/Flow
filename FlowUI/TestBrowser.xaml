<UserControl x:Class="FlowUI.TestBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlowUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:TestBrowserViewModel}">
    <DockPanel>
        <Label DockPanel.Dock="Top">Test Browser</Label>
        <Button DockPanel.Dock="Top" Command="{Binding AddTest}">+</Button>
        <ListBox ItemsSource="{Binding Tests}" 
                 SelectedItem="{Binding SelectedTest}"
                 SelectedIndex="{Binding SelectedIndex, Mode=OneWayToSource}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
